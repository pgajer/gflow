# Generated overrides from configure (profile + sanitizer backend, if any)
-include Makevars.local
GFLOW_BUILD_PROFILE ?= dev

# ---- Include paths
PKG_CPPFLAGS = -I. -IANN
PKG_CPPFLAGS += -I../inst/include/gflow
PKG_CPPFLAGS += -I../inst/include -DR_NO_REMAP
#PKG_CPPFLAGS += -DEIGEN_DONT_VECTORIZE -DEIGEN_DONT_PARALLELIZE
# Only disable parallelization on problematic platforms
ifeq ($(OS),Windows_NT)
    PKG_CPPFLAGS += -DEIGEN_DONT_PARALLELIZE
else
    ifeq ($(GFLOW_BUILD_PROFILE),cran-safe)
        PKG_CPPFLAGS += -DEIGEN_DONT_PARALLELIZE
    else
        # Enable Eigen parallelization on Unix-like systems in dev profile
        PKG_CPPFLAGS += -DEIGEN_USE_OPENMP
    endif
endif
PKG_CPPFLAGS += -D_Alignof=__alignof__
# Neutralize ANN's DLL decorations (harmless on non-Windows too)
PKG_CPPFLAGS += -DDLL_API=

# Force-include Eigen config before any Eigen headers
PKG_CPPFLAGS += -include ../inst/include/gflow/eigen_config.hpp

# ---- C++ standard / OpenMP
CXX_STD      = CXX17
ifeq ($(GFLOW_BUILD_PROFILE),cran-safe)
    PKG_CPPFLAGS += -DGFLOW_ALLOW_NO_OPENMP
    PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)
    PKG_LIBS     = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS)
else ifeq ($(GFLOW_BUILD_PROFILE),dev)
    # Dev profile: use toolchain-provided OpenMP flags and suppress noisy warnings.
    PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS) -Wno-class-memaccess -Wno-psabi -Wno-pedantic
    PKG_LIBS     = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS)
else
    $(warning Unknown GFLOW_BUILD_PROFILE='$(GFLOW_BUILD_PROFILE)'; using dev profile)
    PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS) -Wno-class-memaccess -Wno-psabi -Wno-pedantic
    PKG_LIBS     = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS)
endif

# ---- Sources
SOURCES_CPP  = $(wildcard *.cpp)
SOURCES_C    = $(wildcard *.c)
ANN_SOURCES  = $(wildcard ANN/*.cpp)

# ---- Objects
OBJECTS = $(SOURCES_CPP:.cpp=.o) $(SOURCES_C:.c=.o) $(ANN_SOURCES:.cpp=.o)

# ---- Build target
$(SHLIB): $(OBJECTS)
