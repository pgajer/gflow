# pkgdown site and docs
^_pkgdown\.yml$
^docs
^pkgdown$

# RStudio project files
^.*\.Rproj$
^\.Rproj\.user$

# Git and GitHub files
^\.git$
^\.gitignore$
^\.github$

# Local scripts and tools (keep in repo, exclude from tarball)
^scripts$
^tools$
^inst/doc$
^dev$
^dev/rchk$

# Local development docs (keep in repo, exclude from tarball)
^cran_docs$
^README\.md$      # keep if you don't want it in the tarball; remove this line to include README.md

# Local build/check scripts and logs
^gflow_check_results\.txt$
^build_and_check\.sh$
^check_cran\.sh$
^check_dev\.R$
^Makefile$
^gflow-manual\.pdf$

# Build artefacts
^gflow\.Rcheck$
^gflow_.*\.tar\.gz$
^libs$
^libsonly$

# OS cruft
^\.DS_Store$
^\.Rapp\.history$

# Temporary / local directories
^\.claude$
^CLAUDE\.md$

# Object and shared libs
^src/.*\.(o|so|dll|a)$

# Vignettes (exclude sources if not shipping)
^[Vv]ignettes$

^rchk_reports$
